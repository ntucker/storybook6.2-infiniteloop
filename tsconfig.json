{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["@anansi/webpack-config/types"],
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts*","**/*.stories.ts*"]
}
